header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search        
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/user/edit") Edit Profile
                li
                    a(href="/user/logout")  Log Out
                li
                    a(href=`/user/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            span 🍪 #{loggedInUser.name}의 Profile
                        else 
                            img.header__avatar(src="/" + loggedInUser.avatarUrl)                             
            else
                li
                    a(href="/login")  Login                             
                li
                    a(href="/join")  Join