extends base.pug

block content
    div
        video#preview    
        button#actionBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        lable(for="video") Video File
        label(for="thumb") Thumbnail File
        input(type="file", accept="image/*", required, id="thumb", name="thumb") 
        input(type="file", accept="video/*",required,id="video",name="video")
        input(name="title",type="text", placeholder="Title", required, maxlength=20)
        input(name="description",type="text", placeholder="Description", required, maxlength=50)
        input(name="hashtags",type="text", placeholder="Hashtags, separated by comma", required)

        input(type="submit", value="UPLOAD")
        
    block script 
        script(src="/static/js/recorder.js")

